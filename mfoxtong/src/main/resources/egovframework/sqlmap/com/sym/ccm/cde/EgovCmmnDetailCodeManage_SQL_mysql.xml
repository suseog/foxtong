<sqlMap namespace="CmmnDetailCodeManage">

	<typeAlias  alias="cmmnDetailCodeVO" type="egovframework.com.sym.ccm.cde.service.CmmnDetailCodeVO"/>

	<resultMap id="detailCodeList" class="egovframework.com.sym.ccm.cde.service.CmmnDetailCodeVO">
		<result property="codeId" column="CODE_ID" columnIndex="1"/>
		<result property="code" column="CODE" columnIndex="2"/>
		<result property="codeNm" column="CODE_NM" columnIndex="3"/>
		<result property="useAt" column="USE_AT" columnIndex="4"/>
	</resultMap>

	<select id="CmmnDetailCodeManage.selectCmmnDetailCodeList" parameterClass="cmmnDetailCodeVO" resultMap="detailCodeList">
		<![CDATA[
			SELECT  A.CODE_ID
			     ,  A.CODE
			     ,  A.CODE_NM
			     ,  A.USE_AT
			  FROM  COMTCCMMNDETAILCODE A
			     ,  COMTCCMMNCODE       B
			 WHERE 	1=1
			   AND  A.CODE_ID = B.CODE_ID
			   AND  A.CODE_ID = #codeId#
   			   AND  A.USE_AT  = 'Y'
   			   AND  B.USE_AT  = 'Y'
		]]>
	</select>


</sqlMap>